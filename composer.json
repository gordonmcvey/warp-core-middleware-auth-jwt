{
  "name": "gordonmcvey/warp-core-middleware-auth-jwt",
  "description": "JWT authentication middleware for Warp Core",
  "license": "Apache-2.0",
  "minimum-stability": "dev",
  "authors": [
    {
      "name": "gordonmcvey",
      "email": "email@example.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "gordonmcvey\\WarpCore\\middleware\\auth\\jwt\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "gordonmcvey\\WarpCore\\middleware\\auth\\jwt\\test\\": "test/"
    }
  },
  "require": {
    "php": ">=8.3.0",
    "ext-json": "*",
    "gordonmcvey/warp-core-sdk": "dev-main"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.4",
    "squizlabs/php_codesniffer": "^4.0",
    "overtrue/phplint": "^9.6",
    "phpstan/phpstan": "^2.1"
  },
  "repositories": [
    {
      "type": "github",
      "url": "git@github.com:gordonmcvey/warp-core-sdk.git"
    },
    {
      "type": "github",
      "url": "git@github.com:gordonmcvey/httpsupport.git"
    }
  ],
  "scripts": {
    "unittest": "vendor/bin/phpunit ./tests/unit",
    "integrationtest": "vendor/bin/phpunit ./tests/integration",
    "test": "vendor/bin/phpunit",
    "phpcs": "vendor/bin/phpcs",
    "lint": "vendor/bin/phplint -c ./phplint.yaml.dist",
    "static": "vendor/bin/phpstan",
    "all": [
      "@test",
      "@phpcs",
      "@lint",
      "@static"
    ]
  }
}
